<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_watergod"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="vmc.machine.impl.watergod.WaterGodProtocol">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="set1LButtonClicked"
            android:text="1L" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="set2LButtonClicked"
            android:text="2L" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="set3LButtonClicked"
            android:text="3L" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="set4LButtonClicked"
            android:text="4L" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button7"
            android:onClick="set5LButtonClicked"
            android:text="5L" />


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button1"
            android:onClick="getInfoButtonClicked"
            android:text="getInfo(type)" />


        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="getStatusButtonClicked"
            android:text="getStatus(type)" />


        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setMachineIdButtonClicked"
            android:text="设置机器编号" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setFlowControlerButtonClicked"
            android:text="设置流量计" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setLitreAndTimeButtonClicked"
            android:text="设置水量上限和供水超时时间" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testLiquidButtonClicked"
            android:text="测试原液" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testWaittingTime"
                android:text="测试排水等待时间" />


        </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info 0xFF"
            android:onClick="btnInfoFF"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status 0xFF"
            android:onClick="btnStatusFF"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="com状态"
            android:onClick="btnCom"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取机器ID"
            android:onClick="btnGetMachineId"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取信息"
            android:onClick="btnTestGetInfo"
            />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="number"
            android:hint="请输入type类型："

            />
        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="number"
            android:hint="请输入"

            />

        <TextView
            android:background="#000"
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:scrollbars="vertical" />
    </LinearLayout>

</LinearLayout>

